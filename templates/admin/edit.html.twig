{% extends 'base.html.twig' %}

{% block title %}Panel Admin{% endblock %}
{% block body %}
<div class="example-wrapper">
<h1 class="text-info mb-5">Edit</h1>
<div class="d-flex flex-column">
   <div class="mb-3">
    <label class="font-weight-bold">Id:</label>
    <span>{{ id }}</span>
  </div>  
  <div class="mb-3">
    <label class="font-weight-bold">Address:</label>
    <span>{{ address }}</span>
  </div>
   <div class="mb-3">
    <label class="font-weight-bold">Individual number:</label>
    <span>{{ created_by }}</span>
   </div> 
   <div class="mb-3">
    <label class="font-weight-bold">Data:</label>
    <span>{{ created_at }}</span>
   </div>  
   <div class="mb-3">
    <label class="font-weight-bold">Description:</label>
    <span>{{ description }}</span>
   </div>
   <div class="mb-5 row">
   {% for file in files %}
   <div class="col-sm-4">
    <div class="card bg-secondary">
    <img class="card-img-top" src="{{ asset( target_directory ~ file.filePath) }}" alt="{{ file.name }}">
        <div class="card-body text-white">
           <ul class="list-unstyled">
           <li>name: {{ file.name }}</li>
           <li>path: {{ target_directory }}</li>
           <li>extension: {{ file.fileExtension }} </li>
           <li>size: {{ file.fileSize}}</li>
           </ul>
        </div>
    </div>
    </div>
   {% endfor %}
</div>
</div>
{% endblock %}
{% block javascripts %}
{{ parent() }}
  {{ encore_entry_script_tags('js/admin') }}
{% endblock %}
